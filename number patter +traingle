class Main {
    public static void main(String[] args) {
      int i,j;
      int n=4;
      for(i=1;i<=n;i++){
          for(j=1;j<=i;j++){
              System.out.print(j);
          }
          for(j=1;j<=2*n-2*i;j++){
              System.out.print(" ");
          }
          for(j=1;j<=i;j++){
              System.out.print(j);
          }
          System.out.println();
      }
}
}
